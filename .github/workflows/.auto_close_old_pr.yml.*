            name: Close Old PRs

            on:
              pull_request:
                types: [opened, synchronize]
            
            jobs:
              close_old_prs:
                runs-on: ubuntu-latest
            
                steps:
                  - name: Close Old PRs
                    if: ${{ github.event.pull_request.created_at | fromjson | strtotime }} < ${{ github.run_id }} - 172800
                    uses: peter-evans/close-pull-request@v2
                    with:
                      github_token: ${{ secrets.GITHUB_TOKEN }}
            